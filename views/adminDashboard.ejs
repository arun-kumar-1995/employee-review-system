<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="dashboard-container">
  <div class="table-heading">Employee List</div>
  <table class="employee-table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <% for (user of users) {%>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <a 
            href="/edit-employee/<%= user._id %>"
            class="btn edit-btn" data-id="<%= user._id%>"><i class="fas fa-edit"></i> Edit</a>
            </td>
            <td>
              <form action="/destroy/<%= user._id %>" method="POST" class="form"
                style="margin:0; padding: 0;"
                >
                <button type="submit" 
                class="btn delete-btn">
                  <i class="fas fa-trash-alt"></i> Delete
                </button>
                </form>
            </td>
            <td>
              <form action="/review/assign-review/<%= user._id %>" method="POST" class="form"
                style="margin:0; padding: 0;"
                >
                <button type="submit" 
                class="btn review-btn">
                  <i class="fas fa-tasks"></i> Assign Review
                </button>
              </form>
            </td>
          </td>
        </tr>

        <%}%>
    
    </tbody>
  </table>

</div>
