<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/dashboard.css" />

<div class="dashboard-container">
  <div class="table-heading">Employee List</div>
  <table class="employee-table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>John Doe</td>
        <td>john.doe@example.com</td>
        <td>Employee</td>
        <td>
          <button class="btn edit-btn"><i class="fas fa-edit"></i> Edit</button>
          </td>
          <td>
            <button class="btn delete-btn">
              <i class="fas fa-trash-alt"></i> Delete
            </button>
          </td>
          <td>
            <button class="btn review-btn">
              <i class="fas fa-tasks"></i> Assign Review
            </button>
          </td>
        </td>
      </tr>
    
    </tbody>
  </table>
  <div class="modal" id="editModal">
    <div class="modal-content">
      <h2>Edit Employee Details</h2>
      <form class="form" action="/create" method="POST">
        <!-- Username input -->
        <div class="form-control">
          <label class="form-label" for="username"></label>
          <input
            type="text"
            id="name"
            name="username"
            class="login-form-input"
            placeholder="Enter User name"
            required
            autocomplete="off"
          />
        </div>
  
        <!-- Email input -->
        <div class="form-control">
          <label class="form-label" for="email"></label>
          <input
            type="email"
            id="email"
            name="email"
            class="login-form-input"
            placeholder="Enter your email"
            required
            autocomplete="off"
          />
        </div>
  
        <!-- Password input -->
        <div class="form-control">
          <input
            type="password"
            id="password"
            name="password"
            class="login-form-input"
            placeholder="Password"
            required
          />
        </div>
  
        <!-- User role input -->
        <div class="form-control">
          <select
            class="login-form-input"
            id="role"
            name="role"
            aria-label="Default select example"
            required
          >
            <option selected value="employee">Employee</option>
            <option value="admin">Admin</option>
          </select>
        </div>
  
         
      </form>

      <button class="btn update-btn">Update</button>
      <button class="btn cancel-btn" id="cancelBtn">Cancel</button>
    </div>
  </div>
</div>
